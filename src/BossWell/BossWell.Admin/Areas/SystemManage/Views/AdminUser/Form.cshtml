@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/AdminUser/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    if (data.HeadIcon != null && data.HeadIcon.length > 10) {
                        $(".coverimg").attr("src", data.HeadIcon);
                    }
                    $("#PassWord").attr("disabled", "disabled");
                }
            });
        }
    });
    function initControl() {

        $("#RoleSid").bindSelect({
            url: "/SystemManage/Role/GetSelectTreeList",
        });
        $("#Gender").select2({ minimumResultsForSearch: -1 });
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/AdminUser/SubmitForm",
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    //上传图片
    function Upload(e) {
        var files = e.files;
        if (files.length < 1) {
            $.modalMsg("请选择上传的图片");
            return;
        }
        var data = new FormData();
        data.append("file", files[0]);

        let xhr = new XMLHttpRequest();
        //xhr.upload.onprogress = function (ev) {
        //    $(".UploadError").text('获取文件进度：' + (100 * ev.loaded / ev.total).toFixed(2) + '%');
        //}
        xhr.open('POST', '/PublicManage/UpLoad/UpLoadImage', true);
        xhr.send(data);
        xhr.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var result = jQuery.parseJSON(this.response);
                if (result == null || result.resultCode != 200) {
                    $.modalMsg("上传失败。。。");
                    return;
                }
                $("#HeadIcon").val(result.path);
                $(".coverimg").attr("src", result.path);
                //$(".UploadError").text(result.resultMsg);
                $.modalMsg("上传成功");
            }
        }
    }
</script>
<style type="text/css">
    .coverimg {
        width: 120px;
        height: 80px;
        float: left;
    }
    .file {
        position: relative;
        float: left;
        margin-top: 50px;
        margin-left: 10px;
        display: inline-block;
        background: #48698B;
        border: 1px solid #48698B;
        border-radius: 2px;
        padding: 4px 12px;
        overflow: hidden;
        color: #fff;
        text-decoration: none;
        text-indent: 0;
        line-height: 20px;
    }

        .file input {
            position: absolute;
            right: 0;
            top: 0;
            opacity: 0;
        }

            .file input:hover {
                cursor: pointer;
            }

        .file:hover {
            cursor: pointer;
            color: #fff;
            text-decoration: none;
        }
</style>
<form id="form1">
