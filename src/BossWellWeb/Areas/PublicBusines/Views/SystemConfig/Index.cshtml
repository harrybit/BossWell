@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    a:hover {
        cursor: pointer;
    }
</style>

<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            treeGrid: true,
            treeGridModel: "adjacency",
            ExpandColumn: "Subtitle",
            url: "/PublicBusines/SystemConfig/GetTreeGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: '标题', name: 'Title', width: 200, align: 'left' },
                { label: '参数', name: 'Cmd', width: 120, align: 'left' },
                { label: '值', name: 'Value', width: 120, align: 'left' },
                {
                    label: '创建时间', name: 'CreateDate', width: 200, align: 'center',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                { label: '内容', name: 'Content', width: 300, align: 'left' },
                {
                    label: 'SID', name: 'Sid', width: 80, align: 'center',
                    formatter: function (cellvalue) {
                        return "<a onclick=\"AltSid('" + cellvalue + "')\">查看</a>";
                    }
                },
                { label: "主键", name: "Sid", hidden: true, key: true }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }

    function AltSid(sid) {
        $.modalAlert(sid, "success");
    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增配置",
            url: "/PublicBusines/SystemConfig/Form",
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().Sid;

        if (keyValue == undefined || keyValue.length < 16) {
            $.modalMsg("请选择操作的列");
            return;
        }

        $.modalOpen({
            id: "Form",
            title: "修改配置",
            url: "/PublicBusines/SystemConfig/Form?keyValue=" + keyValue,
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var sid = $("#gridList").jqGridRowValue().Sid;

        if (sid == undefined || sid.length < 16) {
            $.modalMsg("请选择删除的列");
            return;
        }
        $.deleteForm({
            url: "/PublicBusines/SystemConfig/DeleteForm",
            param: { keyValue: sid },
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }

</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>添加系统配置</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改系统配置</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除配置</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>
