@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<style>
    a:hover {
        cursor: pointer;
    }
</style>
<script>
    $(function () {
        $('#layout').layout();
        treeView();
        gridList();
    })

    function treeView() {
        $("#itemTree").treeview({
            url: "/PublicBusines/ComClass/GetParentListJson",
            onnodeclick: function (item) {
                $("#txt_keyword").val('');
                $('#btn_search').trigger("click");
            }
        });
    }

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            treeGrid: true,
            treeGridModel: "adjacency",
            ExpandColumn: "Subtitle",
            url: "/PublicBusines/ComClass/GetTreeGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: '标题', name: 'Title', width: 200, align: 'left' },
                { label: '副标题', name: 'Subtitle', width: 200, align: 'left' },
                {
                    label: "是否启用", name: "IsEnable", width: 60, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == true ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '创建时间', name: 'CreateDate', width: 200, align: 'center',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                { label: '备注', name: 'Remark', width: 300, align: 'left' },
                {
                    label: 'SID', name: 'Sid', width: 80, align: 'center',
                    formatter: function (cellvalue) {
                        return "<a onclick=\"AltSid('" + cellvalue + "')\">查看</a>";
                    }
                },
                { label: "主键", name: "Sid", hidden: true, key: true }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { parentId: $("#itemTree").getCurrentNode().id },
            }).trigger('reloadGrid');
        });
    }

    function AltSid(sid) {
        $.modalAlert(sid, "success");
    }

    function btn_add() {
        var nodeModel = $("#itemTree").getCurrentNode();
        if (nodeModel == undefined || nodeModel.id == undefined) {
            $.modalMsg("请选择需要添加的分类");
            return;
        }
        $.modalOpen({
            id: "Form",
            title: "新增分类",
            url: "/PublicBusines/ComClass/Form?PId=" + nodeModel.id,
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().Sid;
        if (keyValue == undefined || keyValue.length < 16) {
            $.modalMsg("请选择操作的列");
            return;
        }
        $.modalOpen({
            id: "Form",
            title: "修改分类",
            url: "/PublicBusines/ComClass/Form?keyValue=" + keyValue,
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var sid = $("#gridList").jqGridRowValue().Sid;

        if (sid == undefined || sid.length < 16) {
            $.modalMsg("请选择删除的列");
            return;
        }

        $.deleteForm({
            url: "/PublicBusines/ComClass/DeleteForm",
            param: { keyValue: sid },
            success: function (data) {
                $('#btn_search').trigger("click");
            }
        });
    }
    function btn_itemstype()
    {
        $.modalOpen({
            id: "ItemsType",
            title: "综合分类",
            url: "/PublicBusines/ComClass/TabType",
            width: "800px",
            height: "550px",
            btn: null
        });
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div id="itemTree"></div>
    </div>
    <div class="ui-layout-center">
        <div class="topPanel">
            <div class="toolbar">
                <div class="btn-group">
                    <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                </div>
                <div class="btn-group">
                    <div class="btn-group">
                        <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>添加分类</a>
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="NF-itemstype" authorize="yes" onclick="btn_itemstype()" >分类管理</a></li>
                        </ul>
                    </div>
                </div>
                <div class="operate">
                    <ul class="nav nav-pills">
                        <li class="first">已选中<span>1</span>项</li>
                        <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改分类</a></li>
                        <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除分类</a></li>
                    </ul>
                    <a href="javascript:;" class="close"></a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
            <div class="search">
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                                <span class="input-group-btn">
                                    <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList"></table>
        </div>
    </div>
</div>