@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        $("#gridList2").dataGrid({
            url: "/PublicBusines/ComClass/GetParentList",
            height: $(window).height() - 90,
            colModel: [
                { label: '标题', name: 'Title', width: 160, align: 'left' },
                {
                    label: "是否启用", name: "IsEnable", width: 60, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == true ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '创建时间', name: 'CreateDate', width: 200, align: 'center',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                { label: "主键", name: "Sid", hidden: true, key: true },
            ]
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增分类",
            url: "/PublicBusines/ComClass/Form?tp=tab",
            width: "600px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList2").jqGridRowValue().Sid;
        if (keyValue == undefined || keyValue.length < 16) {
            $.modalMsg("请选择操作的列");
            return;
        }
        $.modalOpen({
            id: "Form",
            title: "修改分类",
            url: "/PublicBusines/ComClass/Form?tp=tab&keyValue=" + keyValue,
            width: "600px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var sid = $("#gridList2").jqGridRowValue().Sid;
        if (sid == undefined || sid.length < 16) {
            $.modalMsg("请选择删除的列");
            return;
        }
        $.deleteForm({
            url: "/PublicBusines/ComClass/DeleteForm",
            param: { keyValue: sid },
            success: function (data) {
                $("#gridList2").resetSelection();
                $("#gridList2").trigger("reloadGrid");
            }
        });
    }
</script>
<div class="topPanel" style="border: 0px;">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" onclick="btn_add()"><i class="fa fa-plus"></i>新建分类</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改分类</a></li>
                <li><a onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除分类</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList2"></table>
    <style>
        .ui-jqgrid {
            border-left: 0px;
            border-right: 0px;
            border-bottom: 0px;
        }
    </style>
</div>
