@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style type="text/css">
    input[type=file] {
        float: left;
        width: 90px;
        height: 36px;
    }

    .uploadError {
        width: 200px;
        overflow: hidden;
    }
</style>
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/PublicBusines/DeviceVersion/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    $(".uploadError").text(data.Path);
                }
            });
        }
    });
    function initControl() {

    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/PublicBusines/DeviceVersion/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    //上传图片
    function Upload(e) {
        var files = e.files;
        if (files.length < 1) {
            $.modalMsg("请选择上传的文件");
            return;
        }
        var data = new FormData();
        data.append("file", files[0]);

        let xhr = new XMLHttpRequest();
        xhr.upload.onprogress = function (ev) {
            $(".UploadError").text('获取文件进度：' + (100 * ev.loaded / ev.total).toFixed(2) + '%');
        }
        xhr.open('POST', '/SystemManage/UpLoad/UpLoadFile', true);
        xhr.send(data);
        xhr.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var result = jQuery.parseJSON(this.response);
                if (result.data == null) {
                    $.modalMsg("Upload Error");
                    return;
                }
                $("#Path").val($(result.data)[0]);
                $(".uploadError").text($(result.data)[0]);
                $.modalMsg("上传成功");
            }
        }
    }

</script>

<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div>
            <table class="form">
                <tr>
                    <th class="formTitle">标题</th>
                    <td class="formValue">
                        <input id="Title" name="Title"  type="text" class="form-control required" placeholder="请输入标题" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">版本号</th>
                    <td class="formValue">
                        <input id="Version" name="Version" type="text" class="form-control required" placeholder="请输入版本号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">文件</th>
                    <td class="formValue">
                        <input type="file" value="上传文件" class="btn btn-default" onchange="Upload(this)" />
                        <div class="uploadError"></div>
                        <input type="hidden" id="Path" name="Path" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" style="height: 35px;">是否启用</th>
                    <td class="formValue" style="padding-top: 1px;">
                        <div class="ckbox">
                            <input id="IsEnable" name="IsEnable" type="checkbox" checked="checked"><label for="IsEnable">是否启用</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue">
                        <textarea id="Remark" name="Remark" class="form-control" style="height: 80px;width: 440px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
