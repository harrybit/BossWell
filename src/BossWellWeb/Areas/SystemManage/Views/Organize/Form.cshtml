@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Organize/GetFormJson",
                data: { sid: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });
    function initControl() {

        $("#ParentId").bindSelect({
            url: "/SystemManage/Organize/GetTreeSelectJson",
        });

        $("#Category").bindSelect({
            url: "/SystemManage/Organize/GetSelectCateJson",
        });

    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/Organize/SubmitForm?sid=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="ParentId" name="ParentId" class="form-control required">
                            <option value="0">父节点</option>
                        </select>
                    </td>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="FullName" name="FullName" type="text" class="form-control required" placeholder="请输入组织机构名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">编号</th>
                    <td class="formValue">
                        <input id="EnCode" name="EnCode" type="text" class="form-control required" placeholder="请输入编号" />
                    </td>
                    <th class="formTitle">类型</th>
                    <td class="formValue">
                        <select id="Category" name="Category" class="form-control required">
                            <option value="0">请选择</option>
                        </select>
                    </td>
                </tr>
                <tr>
                <tr>
                    <th class="formTitle">负责人</th>
                    <td class="formValue">
                        <input id="Lead" name="Lead" type="text" class="form-control" />
                    </td>
                    <th class="formTitle">电话</th>
                    <td class="formValue">
                        <input id="TelPhone" name="TelPhone" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">邮箱</th>
                    <td class="formValue">
                        <input id="Email" name="Email" type="text" class="form-control" />
                    </td>
                    <th class="formTitle">地址</th>
                    <td class="formValue">
                        <input id="Address" name="Address" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" style="height: 35px;">启用</th>
                    <td class="formValue" colspan="3" style="padding-top: 1px;">
                        <div class="ckbox">
                            <input id="IsEnable" name="IsEnable" type="checkbox" checked="checked"><label for="IsEnable">有效</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Remark" name="Remark" class="form-control" style="height: 80px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>