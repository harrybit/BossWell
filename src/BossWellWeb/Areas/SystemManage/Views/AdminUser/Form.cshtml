@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/AdminUser/GetFormJson",
                data: { sid: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    if (data.HeadIcon != null && data.HeadIcon.length > 10) {
                        $(".coverimg").attr("src", data.HeadIcon);
                    }
                    $("#PassWord").attr("disabled", "disabled");
                }
            });
        }
    });
    function initControl() {

        $("#OrganizeSid").bindSelect({
            url: "/SystemManage/Organize/GetTreeSelectJson",
        });

        $("#RoleSid").bindSelect({
            url: "/SystemManage/Role/GetTreeSelectJson",
        });

        $("#Gender").bindSelect();

    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/AdminUser/SubmitForm?sid=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    //上传图片
    function Upload(e) {
        var files = e.files;
        if (files.length < 1) {
            $.modalMsg("请选择上传的图片");
            return;
        }
        var data = new FormData();
        data.append("file", files[0]);

        let xhr = new XMLHttpRequest();
        xhr.upload.onprogress = function (ev) {
            $(".UploadError").text('获取文件进度：' + (100 * ev.loaded / ev.total).toFixed(2) + '%');
        }
        xhr.open('POST', '/SystemManage/UpLoad/UpLoadImage', true);
        xhr.send(data);
        xhr.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var result = jQuery.parseJSON(this.response);
                if (result.data == null) {
                    $.modalMsg("Upload Error");
                    return;
                }
                $("#HeadIcon").val($(result.data)[0]);
                $(".coverimg").attr("src", $(result.data)[0]);
                $(".UploadError").text($(result.data)[0]);
                $.modalMsg("上传成功");
            }
        }
    }

</script>
<style type="text/css">
    .coverimg {
        width: 264px;
        height: 120px;
        float: left;
    }

    input[type=file] {
        float: left;
        width: 90px;
        margin-top: 82px;
        margin-left: 20px;
    }

    .UploadError {
        width: 200px;
        overflow: hidden;
    }
</style>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">

                <tr>
                    <th class="formTitle">组织机构</th>
                    <td class="formValue">
                        <select id="OrganizeSid" name="OrganizeSid" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">角色</th>
                    <td class="formValue">
                        <select id="RoleSid" name="RoleSid" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">头像</th>
                    <td colspan="3" class="formValue">
                        <img src="~/Content/img/covering.png" alt="..." class="img-thumbnail coverimg">
                        <div class="UploadError"></div>
                        <input type="file" value="上传图片" class="btn btn-default" onchange="Upload(this)" />
                        <input id="HeadIcon" name="HeadIcon" type="hidden" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">账号</th>
                    <td class="formValue">
                        <input id="Account" name="Account" type="text" class="form-control required" placeholder="请输入管理员账号" />
                    </td>
                    <th class="formTitle">密码</th>
                    <td class="formValue">
                        <input id="PassWord" name="PassWord" type="password" class="form-control required" placeholder="请输入密码" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">昵称</th>
                    <td class="formValue">
                        <input id="NickName" name="NickName" type="text" class="form-control required" placeholder="请输入昵称" />
                    </td>
                    <th class="formTitle">排序</th>
                    <td class="formValue">
                        <input id="Sort" name="Sort" type="text" class="form-control number" placeholder="请输入排序" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">性别</th>
                    <td class="formValue">
                        <select id="Gender" name="Gender" class="form-control required">
                            <option value="1">男</option>
                            <option value="2">女</option>
                        </select>
                    </td>
                    <th class="formTitle">生日</th>
                    <td class="formValue">
                        <input id="Birthday" name="Birthday" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">电话</th>
                    <td class="formValue">
                        <input id="TelPhone" name="TelPhone" type="text" class="form-control" />
                    </td>
                    <th class="formTitle">邮箱</th>
                    <td class="formValue">
                        <input id="Email" name="Email" type="text" class="form-control" />
                    </td>
                </tr>



                <tr>
                    <th class="formTitle">是否启用</th>
                    <td class="formValue" colspan="3">
                        <div class="ckbox">
                            <input id="IsEnable" name="IsEnable" type="checkbox"><label for="IsEnable">是否启用</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Remark" name="Remark" class="form-control" style="height: 80px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
